# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=virtual_money_db
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_LOGGING=false

# Application configuration
APP_PORT=3000
APP_HOST=0.0.0.0
NODE_ENV=development
APP_NAME=EnhancedVirtualMoneySystem
APP_URL=http://localhost:3000
APP_LOCALE=en

# Secret key for encryption/authentication
SECRET_KEY=your_secret_key

# JWT configuration
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=1d
JWT_ISSUER=virtual_money_system
JWT_AUDIENCE=virtual_money_users

# Log level (e.g., DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO
LOG_DIR=logs/
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Redis configuration (optional, for caching/sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# Email configuration (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=no-reply@example.com
EMAIL_SECURE=false
EMAIL_TLS_REJECT_UNAUTHORIZED=false
EMAIL_TEMPLATE_DIR=email_templates/

# CORS configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_CREDENTIALS=true

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests, please try again later.

# Pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File upload configuration
UPLOAD_DIR=uploads/
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,docx

# API versioning
API_VERSION=v1

# Feature toggles
ENABLE_EMAIL_VERIFICATION=true
ENABLE_2FA=false
ENABLE_SIGNUP=true
ENABLE_API_DOCS=true
ENABLE_MAINTENANCE_MODE=false
ENABLE_USER_PROFILE_PICTURES=true
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOGS=true

# Timezone
TZ=UTC

# Session configuration
SESSION_SECRET=your_session_secret
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false
SESSION_COOKIE_MAX_AGE=86400000
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax

# Third-party integrations (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=

# Admin user defaults
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin_password

# Security
PASSWORD_SALT_ROUNDS=10
CSRF_PROTECTION=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
CONTENT_SECURITY_POLICY=default-src 'self'
REFERRER_POLICY=no-referrer
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Monitoring/Analytics
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=
PROMETHEUS_METRICS=true
NEW_RELIC_LICENSE_KEY=

# Backup
BACKUP_DIR=backups/
BACKUP_SCHEDULE=0 3 * * *
BACKUP_RETENTION_DAYS=30

# Miscellaneous
ALLOW_GUEST_USERS=false
MAX_LOGIN_ATTEMPTS=5
LOGIN_ATTEMPT_WINDOW_MS=900000
APP_SUPPORT_EMAIL=support@example.com
APP_CONTACT_PHONE=+1234567890

# Currency/Finance
DEFAULT_CURRENCY=USD
EXCHANGE_RATE_API_KEY=
MIN_TRANSACTION_AMOUNT=1
MAX_TRANSACTION_AMOUNT=10000
TRANSACTION_FEE_PERCENT=1.5

# Push notifications
PUSH_NOTIFICATION_ENABLED=false
PUSH_NOTIFICATION_SERVICE=
PUSH_NOTIFICATION_API_KEY=

# Webhooks
WEBHOOK_SECRET=
WEBHOOK_URL=

# Localization
SUPPORTED_LOCALES=en,es,fr,de,zh
DEFAULT_LOCALE=en

# Maintenance
MAINTENANCE_MESSAGE=The system is under maintenance. Please try again later.

# API Keys (custom)
CUSTOM_API_KEY=
